
modules = ["nodejs-20", "postgresql-16", "web"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "cloudrun"
build = ["npm", "run", "build"]
run = ["sh", "-c", "PORT=5000 npm run dev"]

[[ports]]
localPort = 5000
externalPort = 80

[workflow]
name = "Start application"
author = "agent"

[workflow.metadata]
agentRequireRestartOnSave = false

[[workflow.tasks]]
task = "packager.installForAll"

[[workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 npm run dev"
waitForPort = 5000
